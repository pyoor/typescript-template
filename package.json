{
  "name": "typescript-template",
  "version": "0.0.0-development",
  "description": "A typescript project template",
  "keywords": [],
  "homepage": "https://github.com/pyoor/typescript-template#readme",
  "bugs": {
    "url": "https://github.com/pyoor/typescript-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pyoor/typescript-template.git"
  },
  "license": "MPL-2.0",
  "author": "Jason Kratzer <kratzer.jason at gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --sourceMap",
    "check-types": "tsc -p tsconfig.eslint.json",
    "docs": "npx typedoc src/index.ts",
    "lint": "eslint ./src/",
    "lint:fix": "eslint ./src/ --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "test": "jest --silent"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix"
    ],
    "*.{js,json,ts,md}": [
      "prettier --write"
    ],
    "package.json": "sort-package-json"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "restoreMocks": true,
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.14.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.2",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.10.6",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^62.4.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "globals": "^16.3.0",
    "husky": "^9.1.6",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "semantic-release": "^25.0.2",
    "sort-package-json": "^3.4.0",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
