{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "A typescript project template",
  "keywords": [],
  "homepage": "https://github.com/pyoor/typescript-template#readme",
  "bugs": {
    "url": "https://github.com/pyoor/typescript-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:pyoor/typescript-template.git"
  },
  "license": "MPL-2.0",
  "author": "Jason Kratzer <kratzer.jason at gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --sourceMap",
    "lint": "eslint ./src/ --ext ts",
    "lint:fix": "eslint ./src/ --ext ts --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest --silent"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**.ts": [
      "npx prettier --write",
      "eslint --cache ./src/ --fix"
    ],
    "package.json": "sort-package-json",
    "*.ts": "eslint --cache --fix"
  },
  "prettier": {
    "jsdocSingleLineComment": false,
    "printWidth": 100,
    "semi": false,
    "tsdoc": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^8.0.0",
    "@types/eslint": "^7.28.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.0",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.0",
    "prettier": "^2.4.1",
    "prettier-plugin-jsdoc": "^0.3.24",
    "semantic-release": "^18.0.0",
    "sort-package-json": "^1.52.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1"
  },
  "engines": {
    "node": ">= 14.16 <15"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
