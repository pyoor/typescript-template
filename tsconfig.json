  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "./dist/",
    "strict": true,
    "target": "ES2022",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./src"],
  "exclude": ["**/__tests__/*", "node_modules", "typings"]
}
