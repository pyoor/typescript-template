{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "./dist/",
    "strict": true,
    "lib": [
      "DOM",
      "es2019"
    ],
    "target": "es2016",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/__tests__/*",
    "node_modules",
    "typings"
  ]
}
